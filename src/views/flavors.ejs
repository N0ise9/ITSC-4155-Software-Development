<%- include('./partials/header.ejs') %>

<h2>Choose flavors that you like</h2>
<form id="flavor-form">
  <fieldset form="flavor-form" class="flavors">
    <div>
      <input type="checkbox" id="salty" name="Salty" value="2">
      <label for="salty">Salty</label>
    </div>
    <div>
      <input type="checkbox" id="sweet" name="Sweet" value="0">
      <label for="sweet">Sweet</label>
    </div>
    <div>
      <input type="checkbox" id="sour" name="Sour" value="5">
      <label for="sour">Sour</label>
    </div>
    <div>
      <input type="checkbox" id="spicy" name="Spicy" value="1">
      <label for="spicy">Spicy</label>
    </div>
    <div>
      <input type="checkbox" id="savory" name="Savory" value="3">
      <label for="savory">Savory</label>
    </div>
    <div>
      <input type="checkbox" id="bitter" name="Bitter" value="4">
      <label for="bitter">Bitter</label>
    </div>
    <div>
      <input type="checkbox" id="hot" name="Hot" value="6">
      <label for="Hot">Hot</label>
    </div>
    <div>
      <input type="checkbox" id="cold" name="Cold" value="7">
      <label for="cold">Cold</label>
    </div>
    <div>
      <input type="checkbox" id="meaty" name="Meaty" value="8">
      <label for="meaty">Meaty</label>
    </div>
  </fieldset>
</form>
<div class="main-nav-buttons">
    <button type="submit" form="flavor-form" formmethod="GET" formaction="/">Go back</button>
    <button type="submit" form="flavor-form" formmethod="GET" formaction="#">I'm not sure</button>
    <button type="submit" form="flavor-form" formmethod="POST" formaction="/flavors">Ok</button>
</div>
