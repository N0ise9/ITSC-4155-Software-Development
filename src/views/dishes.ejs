<%- include('./partials/header.ejs') %>

<h2>Choose what you like</h2>
<form id="dish-form">
  <% for (let i = 0; i < posts.length; i++) { %>
  <div class="dish-form-row">
    <div class="dish-container">
      <img src="<%=posts[i].thumbnail%>" alt="food" />
    </div>
    <fieldset form="dish-form" class="dish">
      <div>
        <input type="radio" id="one" name="<%=posts[i].name%>" value="1">
        <label for="one">1</label>
      </div>
      <div>
        <input type="radio" id="two" name="<%=posts[i].name%>" value="2">
        <label for="two">2</label>
      </div> 
      <div>
        <input type="radio" id="three" name="<%=posts[i].name%>" value="3">
        <label for="three">3</label>
      </div> 
      <div>
        <input type="radio" id="four" name="<%=posts[i].name%>" value="4">
        <label for="four">4</label>
      </div> 
      <div>
        <input type="radio" id="five" name="<%=posts[i].name%>" value="5">
        <label for="five">5</label>
      </div>   
    </fieldset>
  </div>
  <%}%>
</form>
<div class="main-nav-buttons">
  <button type="submit" form="dish-form" formmethod="GET" formaction="/flavors">Go back</button>
  <button type="submit" form="dish-form" formmethod="GET" formaction="#">I'm not sure</button>
  <button type="submit" form="dish-form" formmethod="POST" formaction="/dishes">Ok</button>
</div>
<%- include('./partials/footer.ejs') %>
