generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FoodChoice {
  userID         String         @id @db.Uuid
  foodID         Int            @unique(map: "foodchoice_foodid_unique")
  name           String         @db.VarChar(255)
  calories       Int
  carbs          Int
  protein        Int
  fat            Int
  restaurantID   String         @unique(map: "foodchoice_restaurantid_unique") @db.Uuid
  RestaurantFood RestaurantFood @relation(fields: [restaurantID], references: [restaurantID], onDelete: NoAction, onUpdate: NoAction, map: "foodchoice_restaurantid_foreign")
}

model Restaurant {
  restaurantID   String @id @db.Uuid
  name           String @db.VarChar(255)
  address        String @db.VarChar(255)
  cuisine        String @db.VarChar(255)
  restaurantFood Int?
}

model RestaurantFood {
  restaurantID String      @id @db.Uuid
  foodID       Int         @unique(map: "restaurantfood_foodid_unique")
  name         String      @db.VarChar(255)
  calories     Int
  carbs        Int
  protein      Int
  fat          Int
  FoodChoice   FoodChoice?
}

model UserAccount {
  userID     String   @id @db.Uuid
  username   String   @unique(map: "useraccount_username_unique") @db.VarChar(255)
  password   String   @db.VarChar(255)
  email      String   @unique(map: "useraccount_email_unique") @db.VarChar(255)
  name       String   @db.VarChar(255)
  accountAge DateTime @db.Date
}

model UserPrefrences {
  userID         String  @id @db.Uuid
  name           String  @db.VarChar(255)
  vegan          Boolean @default(false)
  vegetarian     Boolean @default(false)
  lowFat         Boolean @default(false)
  lowCalorie     Boolean @default(false)
  ketogenic      Boolean @default(false)
  atkins         Boolean @default(false)
  dash           Boolean @default(false)
  glutenFree     Boolean @default(false)
  fruitarian     Boolean @default(false)
  cardiac        Boolean @default(false)
  paleolithic    Boolean @default(false)
  pescetarian    Boolean @default(false)
  pritikin       Boolean @default(false)
  range          Int     @default(50)
  maxCost        Int?
  cuisineChoice  String? @db.VarChar(255)
  foodChoice     Int?
  foodChoiceName String? @db.VarChar(255)
}

