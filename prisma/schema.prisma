generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id            String  @id @unique
  name          String  @db.VarChar(255)
  image_url     String
  url           String
  review_count  Int
  categories    Json
  rating        Float
  price         String?
  location      Json
  phone         String
  display_phone String
}

model RestaurantFood {
  foodID       String    @id @unique(map: "restaurantfood_foodid_unique") 
  restaurantID String
  cuisine      Int
  flavor       Int[]
  name         String @db.VarChar(255)
}

model User {
  userID     String      @id @unique 
  username   String   @unique(map: "useraccount_username_unique") @db.VarChar(255)
  password   String   @db.VarChar(255)
  email      String   @unique(map: "useraccount_email_unique") @db.VarChar(255)
  name       String   @db.VarChar(255)
  accountAge DateTime @db.Date
}