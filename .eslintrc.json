{
  "env": {
    "es2021": true
  },
  "root": true,
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "max-len": ["error", 120],
    "sort-keys": ["error"],
    "no-console": ["warn", { "allow": ["info", "error", "warn"] }]
  },
  "ignorePatterns": "**/*.spec.*"
}
